<% provide :title, t("subjects.index.title") %>
<h1><%= t "subjects.index.title" %></h1>
<div id="subjects-index">
  <div class="pl-4 my-1">
    <div class="my-1">
      <a class="search_collapse f-md" data-toggle="collapse" href="#subject-search" aria-expanded="false">
        <span class="glyphicon glyphicon-chevron-down"></span>
        <%= t "toggle_search" %>
      </a>
    </div>
    <div class="collapse" id="subject-search">
      <%= search_form_for(@q, url: subjects_path, class: "d-flex") do |f| %>
        <%= f.search_field :name_cont, class: "form-control f-lg" %>

        <%= f.submit t("search"), class: "width-fit btn-primary ml-1 br-4px"%>
      <% end %>
    </div>
  </div>
  <ul id="subjects-list">
    <%== pagy_info @pagy %>
    <%== pagy_bootstrap_nav(@pagy) %>
    <%= render @subjects %>
  </ul>
</div>
